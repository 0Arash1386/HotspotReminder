<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center"
    android:background="#000000" android:padding="24dp">

    <Button android:id="@+id/timeButton" android:text="@string/set_time"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:backgroundTint="#2196F3" android:textColor="#FFFFFF"/>

    <Button android:id="@+id/statusButton" android:text="@string/view_status"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1976D2" android:textColor="#FFFFFF"/>

    <Button android:id="@+id/aboutButton" android:text="@string/about"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0D47A1" android:textColor="#FFFFFF"/>
</LinearLayout>